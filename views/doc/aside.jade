ul.sidebar-nav
  li(class="#{ active === 'home'?'active':'' }")
    a(href!=getURL("/docs/#{ doc.slug }", preview)) Overview
  li(class="#{ active === 'endpoints'?'active':'' }")
    a(href!=getURL("/docs/#{ doc.slug }/endpoints", preview)) Endpoints
    ul
      each group, i in doc.groups
        li(class="#{ active === i?'active':'' }")
          a(href!=getURL("/docs/#{ doc.slug }/endpoints/#{ i }", preview))= group.name