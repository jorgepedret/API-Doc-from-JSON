header.page-header
  h1 #{ group.title }
.body
  - if (group.intro)
    p= group.intro
  - if (group.endpoints)
    .eps-index#edpoints-index
      each ep, i in group.endpoints
        a(href="##{ i }")
          div(class="ep ep-short ep-#{ ep.method }")
            header.ep-header
              .ep-method= ep.method
              .ep-path= ep.path
              .ep-excerpt= ep.name
  - else
    .alert.alert-info
      h4 No endpoints
      p You haven't added any endpoints to this group
      p
        a.btn.btn-success(href="/#{ doc.id }/new-endpoint") <i class="icon-plus icon-white"></i> Add an endpoint
  - if (group.endpoints)
    h2 Endpoint Details
    .eps
      each ep, i in group.endpoints
        div(class="ep ep-#{ ep.method }", id="#{ i }")
          header.ep-header
            .ep-method= ep.method
            .ep-path= ep.path
          .ep-body
            .ep-description
              != md(ep.description)
            - if (ep.params.length > 0)
              .ep-params
                header
                  strong Parameters
                table.table.table-hover
                  tbody
                    each param in ep.params
                      tr
                        td.key= param.key
                        td.description= param.description
            .ep-curl
              span: strong Sample Request
              pre: code= ep.curl
              button.btn-response.btn(data-toggle="collapse", data-target="##{ i }-response") Sample Response <span class="caret"></span>
              .ep-response.collapse(id="#{ i }-response")
                pre: code= ep.response